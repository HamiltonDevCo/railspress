<%= content_tag :header, class: 'entry-header' do %>
  <%= hidden_field_tag "railspress_current_template_entry_header", 'app/views/railspress/posts/template-parts/_entry-header.html.erb' if Railspress.WP_DEBUG %>
      <%= content_tag :h3, @post.post_title, class: 'entry-title' %>
      <%= if @is_revision
            content_tag :h4, class: 'revision-parent px-2 text-muted' do
              t('railspress.shortcodes.revisions.title_html',
                date: I18n.l(@post.post_date, format: @revision_post_date_title_format),
                post: link_to(@main_post.post_title, main_app.show_page_path(get_page_uri(@main_post))))
            end
          end %>
<% end %>

