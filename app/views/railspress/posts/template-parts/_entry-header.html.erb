<%= content_tag :header, class: 'entry-header' do %>
      <%= content_tag :h3, @page.post_title, class: 'entry-title' %>
      <%= if @is_revision
            content_tag :h4, class: 'revision-parent px-2 text-muted' do
              t('railspress.shortcodes.revisions.title_html',
                date: I18n.l(@page.post_date, format: @revision_post_date_title_format),
                post: link_to(@main_post.post_title, main_app.show_page_path(get_page_uri(@main_post))))
            end
          end %>
<% end %>

