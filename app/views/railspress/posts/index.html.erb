<%= content_tag :h2 do %>
  <%= t('railspress.post.index.title') %>
  <%= ' &ndash; '.html_safe + content_tag(:small, @year) unless @year.nil? %>
  <%= ' &ndash; '.html_safe + content_tag(:small, @tag.name) unless @tag.nil? %>
<% end %>

<% @posts.each do |post| %>
  <%= render partial: 'content_excerpt', locals: {post: post} %>
<% end %>

<%= content_tag :nav, class: 'navigation pagination', role: 'navigation' do %>
  <%= will_paginate @posts, class: 'nav-links', previous_label: t('railspress.post.index.newer'), next_label: t('railspress.post.index.older') %>
<% end %>
