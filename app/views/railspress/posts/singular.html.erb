<%= content_tag :article, id: "post-#{@post.id}", class: get_post_class(@post_class, @post).join(' ')  do %>
  <%= hidden_field_tag "railspress_current_template_article", 'app/views/railspress/posts/singular.html.erb' if Railspress.WP_DEBUG %>
  <%= render partial: 'entry_header',  locals: {post: @post} %>
  <%= content_tag :div, class: 'entry-content' do %>
    <%#= @post.post_content.html_safe %>
    <%= content_html @post.post_content %>
  <% end %>
  <%= render partial: 'entry_footer',  locals: {post: @post} %>
<% end %>
