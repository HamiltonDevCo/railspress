<%= content_tag :h1 do %>
  <%= get_option 'blogname' %>
  <%= content_tag :small, get_option('blogdescription', ''), class: 'text-muted' %>
<% end %>

<% unless @page.nil? %>
  <%= content_tag :div, id: "post-#{@page.id}", class: get_post_class('', @page).join(' ') do %>
    <%= content_tag :div, class: 'entry-content p-2' do %>
      <%= content_html @page.post_content %>
    <% end %>
  <% end %>
<% end %>
