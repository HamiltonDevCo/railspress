<%#
  The template for displaying the footer

  @link https://developer.wordpress.org/themes/basics/template-files/#template-partials

  @package WordPress
  @subpackage Twenty_Nineteen
  @since 1.0.0
%>

<footer id="colophon" class="site-footer">
  <%# ?php get_template_part( 'template-parts/footer/footer', 'widgets' ); %>
  <div class="site-info">
    <% blog_info = get_bloginfo('name') %>
    <% unless blog_info.blank? %>
      <%= link_to bloginfo('name'), esc_url(home_url('/')), class: 'site-name', rel: 'home' %>,
    <% end %>
    <a href="https://wordpress.org/" class="imprint">
      <%= t('railspress.layouts.footer.powered_by', provider: 'WordPress') %>
    </a>
    <%#
			if ( function_exists( 'the_privacy_policy_link' ) ) {
				the_privacy_policy_link( '', '<span role="separator" aria-hidden="true"></span>' );
      }
    %>
    <% if true # has_nav_menu('footer')  %>
      <nav class="footer-navigation" aria-label="Footer Menu">
        <%=
          wp_nav_menu({theme_location: 'footer', menu_class: 'footer-menu', depth: 1}).html_safe
        %>
      </nav><!-- .footer-navigation -->
    <% end %>
  </div><!-- .site-info -->
</footer><!-- #colophon -->
